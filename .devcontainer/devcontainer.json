{
    "name": "Shopify Hydrogen",
    "image": "mcr.microsoft.com/vscode/devcontainers/javascript-node:0-16",
    "settings": {},
    "extensions": [
        "graphql.vscode-graphql",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
